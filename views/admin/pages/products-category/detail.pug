extends ../../layouts/default.pug

block main
  if (category.title)
    h1(class="mb-4") #{category.title}

  if (category.thumbnail)
    div(class="mb-4")
      img(
        src=category.thumbnail, 
        style="width: 100px"
      )
  
  if (category.status)
    div(class="mb-4")
      span Trạng thái: 
      if (category.status === "active")
        span(class="badge text-bg-success") Hoạt động
      else
        span(class="badge text-bg-danger") Dừng hoạt động

  if (category.description)
    div(class="mb-4") !{category.description}

  a(
    href=`${prefixAdmin}/products-category/edit/${category.id}`
    class="badge text-bg-warning"
  ) Chỉnh sửa

  script(src="/admin/js/product.js") 