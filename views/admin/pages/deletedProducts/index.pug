extends ../../layouts/default.pug

block main
  .card.mb-3
      .card-header Danh sách sản phẩm bị xóa
        .card-body
          table(
            class="table table-hover table-sm"
            checkbox-multi
          )
            thead
              tr
                th
                  input(type="checkbox" name="checkall")
                th STT
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Vị trí
            
            tbody
              each item, index in products
                tr
                  td
                    input(
                      type="checkbox"
                      name="id"
                      value=item.id
                      )
                  td #{index + 1}
                  td
                    img(src=item.thumbnail, alt=item.title, width="100px", height="auto")
                  td #{item.title}
                  td #{item.price}$
                  td
                    input(
                      type="number"
                      value=item.position 
                      style="width: 60px"
                      min="1"
                      name="position"
                      )